<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-body-secondary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">OrganizationManagement</a>
           
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                       
                    </ul>

                   @if (User.Identity.IsAuthenticated) 
                    {
                        <span class="me-2">@User.Identity.Name</span>
                        <div id="logoutForm">
                        
                            <form method="post" asp-controller="Home" asp-action="Logout" id="logoutForm">
                                <button type="submit" id="logoutBtn" class="btn btn-outline-danger">Logout</button>
                            </form>
                        </div>
                    }
                    else
                    {
                    <div id="loginForm">
                            <a asp-controller="Account" asp-action="Login" class="btn btn-login me-2">🔐 Login</a>
                            <a asp-controller="Account" asp-action="Register" class="btn btn-register">📝 Register</a>

                    </div>
                    
                    }
                </div>
            </div>
        </nav>
    </header>
    


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @RenderSection("Script", required: false)

