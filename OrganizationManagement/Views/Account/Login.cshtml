@model OrganizationManagement.DTO.AdminDto

@{
    ViewData["Title"] = "User Login";
}

<div class="container d-flex align-items-center justify-content-center min-vh-100">
    <div class="col-md-5">
        <div class="card shadow-lg rounded-4 border-0">
            <div class="card-body p-5">
                <h3 class="text-center mb-4">User Login</h3>

                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger text-center">
                        @TempData["Error"]
                    </div>
                }

                <form id="loginForm" asp-action="Login" method="post">
                    <div class="form-floating mb-3">
                        <input asp-for="Email" class="form-control" placeholder="Email" />
                        <label asp-for="Email"></label>
                    </div>

                    <div class="form-floating mb-4">
                        <input asp-for="Password" class="form-control" type="password" placeholder="Password" />
                        <label asp-for="Password"></label>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 py-2 mb-3" id="loginButton">
                        Login
                    </button>
                </form>

                <div class="text-center">
                    <p class="mb-0">
                        Don't have an account?
                        <a href="@Url.Action("Register", "Account")" class="text-decoration-none fw-bold">Sign up</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
